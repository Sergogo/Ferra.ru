<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:background="@drawable/news_bg">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="0px">

        <!--TextView
            android:id="@+id/newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="21.12"
            android:gravity="left"
            android:textColor="#107020"/-->

        <TextView
                android:id="@+id/newsTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/news_list_text_medium"
                android:textStyle="bold"
                android:text="Заголовок новости"
                android:gravity="left"
                android:paddingLeft="7dp"
                android:typeface="serif"
                android:textColor="@color/unread_article"
                android:background="@color/title_background"/>
    </LinearLayout>
    <!--android:textColor="#1f65ad"-->

    <TextView
            android:id="@+id/newsDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_list_text_medium"
            android:text="Краткое описание новости."
            android:gravity="left"
            android:paddingLeft="7dp"
            android:lines="3"
            android:textColor="@color/unread_article"/>

</LinearLayout>